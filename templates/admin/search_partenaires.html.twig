{% extends 'admin/base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock %}
{% block title %}
	<title>
		Admin Tableau de bord
	</title>
{% endblock %}

{% block header %}
<label for="pet-select">cherche un partenaire:</label>

<select name="pets" id="partenaire">
    <option value="">--Please choose an option--</option>
    <option value="dog">{{ partenaires }}</option>
    <option value="cat">Cat</option>
    <option value="hamster">Hamster</option>
    <option value="parrot">Parrot</option>
    <option value="spider">Spider</option>
    <option value="goldfish">Goldfish</option>
</select>
{{ dump(partenaire) }}
{% endblock header %}


{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}

{#button pour avoir la listes des partenaires#}
{% block buttonpartenaires %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_partenaires') }}">
			Partenaires
		</a>
	</button>
{% endblock buttonpartenaires %}
{#button pour avoir la listes des structures#}
{% block buttonstructures %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_structures') }}">
			Structures
		</a>
	</button>
{% endblock buttonstructures %}
{% block body %}
	<form class="d-flex" action="{{ path ('resultat_partenaire') }}">
		<input class="form-control me-sm-2" type="search" placeholder="Rechercher un partenaire" name="search">
		<button class="btn btn-secondary my-2 my-sm-0" type="submit">
			Rechercher
		</button>
	</form>

	
{% endblock body %}
