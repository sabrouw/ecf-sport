{% extends 'admin/base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock  %}
{% block title %}
	<title>
		Résultat de recherche admin
	</title>
{% endblock %}


{% block header %}
<h1>
	Résultats de votre recherche
	{% endblock header %}

	{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}




	
	{% block body %}
   
        


		{% for partenaires in partenaires %}

			<h2>
				Nom:
				{{ partenaires.name }}
			</h2>
			<h3>
				Id:
				{{ partenaires.id }}
			</h3>


			<button class="btn btn-dark mt-4" type="submit" name"modifier_partenaire">
			<a href="{{ path ('admin_partenaire_update', {'id': partenaires.id}) }}">	Modifier partenaire</a>
			</button>
			<button class="btn btn-dark mt-4" type="submit" name"activer_partenaire">
				Activier partenaire
			</button>
			<button class="btn btn-dark mt-4" type="submit" name"voir_partenaire">
				<a href="{{ path ('admin_partenaire', {'id': partenaires.id}) }}">
					Voir sur le site
				</a>
			</button>

		{% endfor  %}


       
        {% for structures in structures %}

			<h2>
				Nom:
				{{ structures.name }}
			</h2>
			<h3>
				Id:
				{{ structures.id }}
			</h3>


			<button class="btn btn-dark mt-4" type="submit" name"modifier_structure">
				Modifier structure
			</button>
			<button class="btn btn-dark mt-4" type="submit" name"activer_structure">
				Activier structure
			</button>
			<button class="btn btn-dark mt-4" type="submit" name"voir_structure">
				<a href="{{ path ('admin_structures', {'id': structures.id}) }}">
					Voir sur le site
				</a>
			</button>

		{% endfor %}
        
	{% endblock body %}
 {% block javascript %}{% endblock javascript %}