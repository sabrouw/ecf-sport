			<script>
								$(document).ready(function(){
									$('#search-resultat').keyup(function(){
										console.log('jquery marche ?')
										var search = $(this).val();
										
										if(search != ""){
											$.ajax({
												type:"GET",
												url:"resultats",
												data: 'resultats =' + encodeURIComponent(search),
												success: function(data){
													if( data != ""){
														$('#search-resultat').append(data)
													}
													else{
														document.getElementById('search-resultat').innerText = 
														/*a stylyser pour bien voir*/
														"aucun résultat a afficher "
													}
												}
											})
										}
									})
									
								});
							
						
					</script>
			


