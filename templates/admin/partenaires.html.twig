{% extends 'admin/base.html.twig' %}
{% block title %}
	<title>
		Interface de gestion de partenaires
	</title>
{% endblock title %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock css %}
{#button pour avoir la listes des partenaires#}
{% block buttonpartenaires %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_partenaires') }}">
			Partenaires
		</a>
	</button>
{% endblock buttonpartenaires %}
{#button pour avoir la listes des structures#}
{% block buttonstructures %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_structures') }}">
			Structures
		</a>
	</button>
{% endblock buttonstructures %}

{% block header %}
	<header id="header">

		<h1 id="titre_admin_partenaires">
			Administrer les partenaires
		</h1>

	</header>
{% endblock header %}
{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}
{% block body %}


	<button class="btn btn-dark" id="creer_partenaire">
		<a href="{{ path ("admin_insert_partenaire") }}">
			Creer un partenaire
		</a>
	</button>


	<div class="mt-3" id="zone_partenaires">
		{% for partenaires in partenaires %}

			<h2 class="mt-4 text-capitalize" id="titre_partenaire">

				{{ partenaires.name }}
			</h2>
			<h3 class="text-capitalize" id="id_partenaire">
				Id:
								(
				{{ partenaires.id }}
				)
			</h3>
			<div class="form-check form-switch">
				<input class="form-check-input mt-4" type="checkbox" id="flexSwitchCheckDefault">
				<label class="form-check-label mt-4" for="flexSwitchCheckDefault">
					Activer
				</label>
			</div>


			<button class="btn btn-dark mt-3" type="submit" name"modifier_partenaires" id="modifier_partenaires">
				<a href="{{ path ("admin_partenaire_update", {'id': partenaires.id})}}">
					Modifier partenaire
				</a>
			</button>

			<button class="btn btn-dark mt-3" type="submit" name"voir_partenaires" id="voir_partenaires">
				<a href="{{ path ('admin_partenaire', {'id': partenaires.id} ) }}">
					Voir le partenaire
				</a>
			</button>
			<button class="btn btn-dark mt-3" type="submit" name"supprimer_partenaires" id="supprimer_partenaires">
				<a href="{{ path ('admin_partenaires_delete', {'id': partenaires.id} ) }} ">
					Supprimer
				</a>
			</button>
			{#<button class="btn btn-dark mt-3" type="submit" name"modifier_partenaires" id="modifier_partenaires">
				<a href="{{ path ("admin_permissions", {'id': partenaires.id})}}">
					Voir les permissions
				</a>
			</button>#}
		{% endfor %}
		

	</div>


{% endblock body %}
