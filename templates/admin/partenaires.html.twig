{% extends 'admin/base.html.twig' %}
{% block title %}
	<title>
		Interface de gestion de partenaires
	</title>
{% endblock title %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock css %}



{% block header %}
	<header id="header">

		<h1 class="mt-3" id="titre_admin_partenaires">
			Administrer les partenaires
		</h1>

	</header>
{% endblock header %}
{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}
{% block body %}

<div>
	<button class="mt-4 btn btn-dark" id="creer_partenaire">
		<i class="fa fa-plus" aria-hidden="true"></i>
		<a href="{{ path ("admin_insert_partenaire") }}">
			Creer un partenaire
		</a>
	</button>
</div>

	
<div class="containter-card">
		{% for partenaires in partenaires %}
		
		<div class="card ">
			<div class="card-header">
			<h2 class=" text-capitalize" id="titre_partenaire">
				{{ partenaires.name }}
			</h2>
			
		</div>
			<div class="card-body">
				<h3 class="text-capitalize mt-2" id="id_partenaire">
					Id:
					({{ partenaires.id }})
				</h3>
				
			<p class="mt-2">{% if partenaires.statut == 0 %}
  					Ce partenaire est inactif
					{% endif %}</p>
					<div class="form-check form-switch">
						<input class="form-check-input mt-4" type="checkbox" id="flexSwitchCheckDefault">
						<label class="form-check-label mt-4" for="flexSwitchCheckDefault">
							Activer
						</label>
					</div>
			</div>
			

<div class="card-footer">
			<button class="btn btn-dark mt-3" type="submit" name"modifier_partenaires" id="modifier_partenaires">
				<i class="fa fa-pencil" aria-hidden="true"></i>
				<a href="{{ path ("admin_partenaire_update", {'id': partenaires.id})}}">
					Modifier partenaire
				</a>
			</button>

			<button class="btn btn-dark mt-3" type="submit" name"voir_partenaires" id="voir_partenaires">
				<i class="fa fa-eye" aria-hidden="true"></i>
				<a href="{{ path ("partenaires", {'id': partenaires.id})}}">
					Voir le partenaire sur le site
				</a>
			</button>
			<button class="btn btn-danger mt-3" type="submit" name"supprimer_partenaires" id="supprimer_partenaires">
				<i class="fa fa-minus" aria-hidden="true"></i>
				<a href="{{ path ('admin_partenaires_delete', {'id': partenaires.id} ) }} ">
					Supprimer
				</a>
			</button>
			{#<button class="btn btn-dark mt-3" type="submit" name"modifier_partenaires" id="modifier_partenaires">
				<a href="{{ path ("admin_permissions", {'id': partenaires.id})}}">
					Voir les permissions
				</a>
			</button>#}
		</div>
		</div>
	
	{% endfor %}
	
</div>
</div>


{% endblock body %}
{% block javascript %}{% endblock javascript %}