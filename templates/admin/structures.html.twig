{% extends 'admin/base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock  %}
{% block title %}
	<title>
		Admin Tableau de bord
	</title>
{% endblock %}

{% block header %}
	<header class="header">
		<h1>
			Administrer les structures
		</h1>
	</header>
{% endblock header %}

{#button pour avoir la listes des partenaires#}
{% block buttonpartenaires %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_partenaires') }}">
			Partenaires
		</a>
	</button>
{% endblock buttonpartenaires %}
{#button pour avoir la listes des structures#}
{% block buttonstructures %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_structures') }}">
			Structures
		</a>
	</button>
{% endblock buttonstructures %}
{% block body %}
	<button class="btn btn-dark mt-4" type="button">
		<a href="{{ path ("admin_insert_structure") }}">
			Creer une structure
		</a>
	</button>

	{% for structures in structures %}

		<h2 class="mt-3 text-capitalize">
			{{ structures.name }}
		</h2>
		<h3 class="text-capitalize">
			Id: (
			{{ structures.id }}
			)
		</h3>
		<div class="form-check form-switch">
			<input class="form-check-input mt-4" type="checkbox" id="flexSwitchCheckDefault">
			<label class="form-check-label mt-4" for="flexSwitchCheckDefault">
				Activer
			</label>
		</div>


		<button class="btn btn-dark mt-3" type="submit" name"modifier_structures" id="modifier_structure">
			<a href="{{ path ("admin_structure_update", {'id': structures.id})}}">
				Modifier la structure
			</a>
		</button>

		<button class="btn btn-dark mt-3" type="submit" name"voir_structure">
			<a href="{{ path ('structure', {'id': structures.id}) }}">
				Voir la structure sur le site
			</a>
		</button>
		<button class="btn btn-dark mt-3" type="submit" name"supprimer_structure">
			<a href="{{ path ('admin_structures_delete', {'id': structures.id} ) }} ">
				Supprimer
			</a>
		</button>


	{% endfor %}
{% endblock body %}
