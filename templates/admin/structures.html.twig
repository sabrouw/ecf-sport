{% extends 'admin/base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock  %}
{% block title %}
	<title>
		Admin Tableau de bord
	</title>
{% endblock %}

{% block header %}
	<header class="header">
		<h1 class="mt-4">
			Administrer les structures
		</h1>
	</header>
{% endblock header %}

{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}




{% block body %}
	<button class="btn btn-dark mt-4" type="button" id="creation_structure">
		<i class="fa fa-plus" aria-hidden="true"></i>
		<a href="{{ path ("admin_insert_structure") }}">
			Creer une structure
		</a>
	</button>
	<div class="containter-card">
	{% for structures in structures %}
	<div class="card ">
		<div class="card-header">
		<h2 class="mt-3 text-capitalize">
			{{ structures.name }}
		</h2>
		
		</div>
		<div class="card-body">	
			<h3 class="text-capitalize">
				Id: (
				{{ structures.id }}
				)
				
			</h3>
			Description: {{ structures.description }}
		
		<div class="form-check form-switch">
			<input class="form-check-input mt-4" type="checkbox" id="flexSwitchCheckDefault">
			<label class="form-check-label mt-4" for="flexSwitchCheckDefault">
				Activer
			</label>
		</div>
	</div>
	<div class="card-footer">
		<button class="btn btn-dark mt-3" type="submit" name"modifier_structures" id="modifier_structure">
			<i class="fa fa-pencil" aria-hidden="true"></i>
			<a href="{{ path ("admin_structure_update", {'id': structures.id})}}">
				Modifier la structure
			</a>
		</button>

		<button class="btn btn-dark mt-3" type="submit" name"voir_structure">
			<i class="fa fa-eye" aria-hidden="true"></i>
			<a href="{{ path ('structure', {'id': structures.id}) }}">
				Voir la structure sur le site
			</a>
		</button>
		<button class="btn btn-danger mt-3" type="submit" name"supprimer_structure">
			<a href="{{ path ('admin_structures_delete', {'id': structures.id} ) }} ">
				Supprimer
			</a>
		</button>


	</div>
</div>

{% endfor %}

</div>
</div>
	
{% endblock body %}
