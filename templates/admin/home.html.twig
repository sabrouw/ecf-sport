{#formulaire d'authentification admin#}
{% block login %} 
<h1 id="login-h1"> Merci de vous authentifier </h1>
   <form id="form-login" action="{{ path ('admin_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success#}
        <input type="visibile" name="_target_path" value="/admin/home"/> 

        <button type="submit">login</button>
    </form>
{% endblock login %}

{#button pour avoir la listes des partenaires#}
{% block buttonpartenaires %}
<button type="btn"><a href="{{ path ('admin_partenaires') }}">Liste de partenaires</a></button>
{% endblock buttonpartenaires %}
{#button pour avoir la listes des structures#}
{% block buttonstructures %}
<button type="btn"><a href="{{ path ('admin_structures') }}">Liste de structure</a></button>
{% endblock buttonstructures %}

{#liste de partenaires de bdd#}
{% block partenaires %}
<div id="zone_partenaires">
    {% for partenaires in partenaires %}
    
    <h2 id="titre_partenaire">Nom: {{ partenaires.name }}</h2>  
    <h3 id="id_partenaire">Id: {{ partenaires.id }}</h3>
        
       
        {#<button type="submit" name"modifier_partenaires" id="modifier_partenaires"><a href="{{ path ("admin_partenaire_update")}}"> Modifier partenaire</a></button>#}
        <button type="submit" name"activer_partenaires" id="activer_partenaires">Activier partenaire</button>
        <button type="submit" name"voir_partenaires" id="voir_partenaires"><a href="{{ path ('partenaire', {'id': partenaires.id}) }}" > Voir le partenaire sur le site </a></button>     
        <button type="submit" name"supprimer_partenaires"id="supprimer_partenaires"><a href="{{ path ('admin_partenaires_delete', {'id': partenaires.id} ) }} " > Supprimer </a></button>
        {% endfor %}

</div>
{% endblock partenaires %}

