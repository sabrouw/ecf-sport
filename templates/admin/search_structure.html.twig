{% extends 'admin/base.html.twig' %}
{% block css %}
	<link rel="stylesheet" href="{{ asset ('assets/css/style.css') }}"/>
{% endblock %}
{% block title %}
	<title>
		Admin Tableau de bord
	</title>
{% endblock %}

{#button pour avoir la listes des partenaires#}
{% block buttonpartenaires %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_partenaires') }}">
			Partenaires
		</a>
	</button>
{% endblock buttonpartenaires %}
{#button pour avoir la listes des structures#}
{% block buttonstructures %}
	<button class="btn btn-dark" type="btn">
		<a href="{{ path ('admin_structures') }}">
			Structures
		</a>
	</button>
{% endblock buttonstructures %}

{% block flash %}
{% for message in app.flashes('success') %}
{{message}}
{% endfor %}
{% endblock flash %}


{% block body %}

	<form class="d-flex mt-4" action="{{ path ('resultat_structure') }}">
		<input class="form-control mt-4" type="text" placeholder="Rechercher une structure" name="search">
		<button class="btn btn-secondary mt-4" type="submit">
			Rechercher
		</button>
	</form>
{% endblock body %}
